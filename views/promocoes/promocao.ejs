 <div class="full">

    

      <aside class="bannerint">

        	<img src="/imagens/bannerloja.jpg" class="img" title="Promoções do Shopping">

            <section>Promoções do Shopping</section> 

        </aside> <!--banner-->

   

  <article id="conteudo" class="pad">

  	<a href="/promocoes" class="back"><span class="seta-esquerda"></span> Voltar para promoção</a>

    

    <div class="titevents">

    	<h1><%=resultados.nome%></h1>

    	<%
		if (resultados.data_inicial !=""){
		%>
    	<p>Início <span><%=moment(resultados.data_inicial).format( 'DD-MM-YYYY')%> </span> </p> 
		<%
		}
		%>
		<%
		if (resultados.data_final !=""){
		%>
		<p> Término <span><%=moment(resultados.data_final).format( 'DD-MM-YYYY')%></span></p>
		<%
		}
		%>

    </div>

    

    <div class="clear"></div><br><br>

    

    <section id="sobrepromo">

   		<h2>Descrição da Promoção</h2>

        <%-resultados.descricao_detalhada%>

        <p>Acesse os <a href="termos.php">termos e condições</a></p>    

    </section>

  

    <section class="fotopromo">

      <!--<h2> Horários</h2>-->

       <img src="<%=resultados.imagem%>" class="img" title="<%=resultados.nome%>">

		<div class="clear"></div><br><br>

        

    </section>

  

  </article> 

   

  

   <div id="more">

    <div class="full">

   		<h3 class="titles" >

       		<span class="twhite" style="left: 20%">Veja Mais</span>

        </h3>

       <% 
			if (outros.length>0){
			var contador = 0;
			outros.forEach(function(resultado) { 
			if (resultado.url_title != resultados.url_title){
			contador++;
			%>
			<a href="/eventos/evento/<%=resultado.url_title%>" class="eventos">
				<img src="<%=resultado.imagem%>"  class="img"  title="<%=resultado.nome%>"> 
				<div class="eline"></div>
				<p><%=resultado.nome%></p>		
			</a>
			<% 
			}
			}); 
			}
			if (contador ==0){
			%>
			<p>Não existem outras promoções</p>
			<% 
			}
			%>

        <div class="clear"></div><br><br>

        

       <div class="clear"></div><br><br>

