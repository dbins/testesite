<% layout("../layout/index") -%>
<% block("title", "ON Market Place | Lojas " + nome_do_shopping_barra_titulo + " | " + resultados.loja); -%>

 <div class="full">
    
        <aside class="bannerint">
        	<img src="/imagens/banner-loja.jpg" class="img" title="<%=resultados.loja%>">
           <!-- <section>Lojas</section>-->
            <div class="thumb"><img src="/imagens/thumb-loja2.jpg" class="img"> </div>
        </aside> <!--banner-->
   
  <article id="conteudo" class="pad">
  	<a href="/lojas" class="back"><span class="seta-esquerda"></span> Voltar para lojas</a>
    
    <section id="sobre">
    	 <h2><img src="/imagens/icon-fone.jpg" width="39" height="39"> 011 <%=resultados.telefone%></h2>
         
    		<img src=" <%=resultados.imagem%>" class="img" title=""> 
    		<h3>Sobre a marca</h3>
            <%=resultados.descricao%>
            
    </section>
  
    <section class="location">
      <h2><img src="/imagens/location.png" width="25" height="34"> Onde encontrar</h2>
        
      <%	if (shopping == ''){   %>
		  <div class="mleft">
			<a class="buttons" id="map1"> Shopping Cidade São Paulo</a>
			<a class="buttons" id="map2"> Shopping Tietê Plaza</a>
			<a class="buttons" id="map3"> Shopping Grand Plaza</a>
		  </div>
       
		<div class="mright">
            <!---este mapa precisamos pegar a mesma programção do ivan que puxa o svg e print a loja marcada---->
            <div class="maps map1">
            		<div style="position:absolute; top:140px; left:320px; z-index:100">
                        <div class="pin"></div>
                        <div class="pulse"></div>
                    </div>
           		 <img src="/imagens/mapa.jpg" class="img">
            </div>
            <div class="maps map2">
            		<div style="position:absolute; top:150px; left:500px; z-index:100">
                        <div class="pin"></div>
                        <div class="pulse"></div>
                    </div>
            	<img src="/imagens/mapa.jpg" class="img">
            </div>
            <div class="maps map3">
            	<div style="position:absolute; top:220px; left:520px; z-index:100">
                        <div class="pin"></div>
                        <div class="pulse"></div>
                    </div>
            	<img src="/imagens/mapa.jpg" class="img"> 
            </div> 
            
        </div><!--mright-->
       <div class="piso">Piso <%=resultados.piso%></div>
       
	   <%	} 	else {	%>	
	   
	   <!----visao shopping--->
	   <div class="mrightloja">
            <!---este mapa precisamos pegar a mesma programção do ivan que puxa o svg e print a loja marcada---->
            <div class="mapsloja map1">
            		<div style="position:absolute; top:160px; left:400px; z-index:100">
                        <div class="pin"></div>
                        <div class="pulse"></div>
                    </div>
           		 <img src="/imagens/mapa.jpg" class="img">
            </div>           
        </div><!--mright-->
       <div class="pisoloja">Piso <%=resultados.piso%></div>
	   
	   
	   
	   <%  } %>  
        
    </section>
  
  </article> 
   
  
   <div id="more">
    
   		<h3 class="titles">
       		<span class="twhite" style="left: 13%;">Veja também</span>
        </h3>
        
        <div class="clear"></div><br><br>
        
        <% 
	if (produtos.length>0){
		produtos.forEach(function(produto) { 
	%>    
    <a href="/produtos/<%=produto.url_title%>" class="prods">
        <section>
			<%
			if(usuario != '') {
			%>  
        	<div class="favs">
            	<span> <%=produto.desconto%> %</span>
                <button value="" id=""></button>
            </div>
            <%
			}
			%>
       		<img src="<%=produto.imagem%>" title="<%=produto.produto%>" class="img">
            <h2><%=produto.loja%></h2>
            <div class="shop"><%=produto.shopping%></div>
            <h3><%=produto.produto%></h3>
            <div class="valor">
				<%
				if (produto.de == produto.por) {
				%>
				<span class="por">R$ <%=produto.por%></span>
				<%
				} else {
				%>
            	<span class="de">De R$ <%=produto.de%></span>
                <span class="por">Por R$ <%=produto.por%></span>
				<%
				}
				%>
            </div>
       </section>  
   </a> 
   
   <% 
	}); 
	} else {
	%>
	
	<h3>Não existem produtos cadastrados nesta loja</h3>
	<%
	}
   %>	
       
       <div class="clear"></div><br><br>
       <a href="" class="botao">Carregar mais</a>
               
    <div class="clear"></div>
    </div><!--MORE-->
  
  
    
 </div><!--full-->


