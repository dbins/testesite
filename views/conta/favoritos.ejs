<script type="text/javascript">
function remover_loja(loja, event){
	event.preventDefault();
	$.ajax({
	  type: 'POST',
	  url: '/lojas/desfavoritar/',
	  dataType : 'json',
	  data: { 
		'loja': loja, 
		'_csrf': '<%= csrfToken %>'
	  },
	  success: function (response) {
		$("#lk" +  loja).remove();
		alert('Loja removido com sucesso!');
	  },
	  error: function () {
		//
	  }
   });
}	


