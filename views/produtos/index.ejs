            <section>Loja online</section>
        </aside> <!--banner-->
   
   <div class="filtro content">
   	<form action="" class="online">
    	<div>
        	<input type="checkbox" id="c1" name="cb">
            <label for="c1">Promoções</label> 
        </div>
        
        <div>
        	<input type="checkbox" id="c2" name="cb">
            <label for="c2"> Produtos</label>
        </div>
        
        <div>
        	<label>Preço</label>
            <input type="text" value="" placeholder="min">
            <input type="text" value="" placeholder="máx">
        </div>
         <div>
        	<label>Categoria</label>
            <select class="minimal">
            	<option>Todas</option>
                
				<% categorias.forEach(function(categoria) { %>
                <option value="<%= categoria.url_title %>"><%= categoria.title %></option>
				<% }); %>
            </select>
        </div>
         <div>
        	<label>Marca</label>
            <select class="minimal">
            	<option>Todas</option>
                <% marcas.forEach(function(marca) { %>
                <option value="<%= marca.url_title %>"><%= marca.url_title %></option>
				<% }); %>
            </select>
        </div>
    </form>
   </div>     

       
