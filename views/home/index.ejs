<% layout("../layout/index") -%>
<% block("title", "ON STORES | O Market Place da CCP para você!"); -%>


    <div class="full">
    
        <div class="banner">
           <div class="container">
              <div id="owl-demo" class="owl-carousel">
               <% 
			   if (banners.length>0){
			   banners.forEach(function(resultado) { 
			   %>
                <div class="item">
                	<img src="/banner/banner.jpg" title="<%=resultado.info.title%>" width="1365" height="600">
                	<section>
                        <span>30% OFF</span>
                        <span><%=resultado.info.title%></span>
                        <span><%=resultado.mall%></span>
                    </section>
                </div>
				<%
				});
				}
				%>
				
            
              </div><!--owl demo-->
           </div><!--container-->    
        </div> <!--banner-->
        
        
  <!------------------produtos---------------------->
  
    <h1 class="cab-on">
   	  <img src="/imagens/onstores.png" width="82" height="90" title="ON Stores"> 
      <p>Compre agora e retire no Shopping nos próximos 30 minutos.</p>
    </h1>
   <div id="produtos">

	<% 
	if (produtos.length>0){
		produtos.forEach(function(produto) { 
	%>    
    <a href="/produtos/<%=produto.id%>" class="prods">
        <section>
        	<div class="favs">
            	<span> <%=produto.desconto%> %</span>
                <button value="" id=""></button>
            </div>
            
       		<img src="/imagens/<%=produto.imagem%>" title="<%=produto.produto%>" class="img">
            <h2><%=produto.loja%></h2>
            <div class="shop"><%=produto.shopping%></div>
            <h3><%=produto.produto%></h3>
            <div class="valor">
            	<span>De R$ <%=produto.de%></span>
                <span>Por R$ <%=produto.por%></span>
            </div>
       </section>  
   </a> 
   
   <% 
	}); 
	}
   %>	
   
   
   </div><!--produtos--> 
 </div><!--full-->

<!------------------Fim produtos---------------------->


<!-------------------- Categorias--------------------->

<article id="categorias">
	<div class="full">
        <h4 class="titles">
       		<span class="tgrey">Categorias</span>
        </h4>
        <p class="sub-title"> simplesmente uma simulação de texto da indústria tipográfica e de impressos,
         e vem sendo utilizado desde o século XVI</p>
            <section class="cat">
                <a href="">
                    <img src="/imagens/cat-feminino.png" class="img" title="Feminino">
                    <span>Feminino</span>
                </a>	
            </section>
            <section class="cat">
                <a href="">
                    <img src="/imagens/cat-masculino.png" class="img" title="Feminino">
                    <span>Maculino</span>
                </a>	
            </section>
            <section class="cat">
                <a href="">
                    <img src="/imagens/cat-infantil.png" class="img" title="Feminino">
                    <span>Infantil</span>
                </a>	
            </section>
            <section class="cat">
                <a href="">
                    <img src="/imagens/cat-esporte.png" class="img" title="Feminino">
                    <span>Esporte</span>
                </a>	
            </section>
    </div>		 
</article>
<!--------------------Fim  Categorias--------------------->

<!--------------------Shoppings--------------------------->
<article id="shoppings">
	<div class="full">
    	<h5 class="titles">
        	<span class="twhite">Shoppings</span>
        </h5>
        <p class="sub-title"> simplesmente uma simulação de texto da indústria tipográfica e de impressos,
         e vem sendo utilizado desde o século XVI</p>
         
		<% shoppings.forEach(function(resultado) { %>
      	<a href="/home/<%=resultado.url_title%>" class="mall">
         	<div>
            	<span class="purple"></span>
   	     		<img src="/imagens/teste.jpg" class="img" title="<%=resultado.title%>">
                <p><%=resultado.title%></p>
       		</div>	
      	</a>
		<% }); %>
         
    </div><!--full-->
</article>

