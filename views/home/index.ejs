<% layout("../layout/index") -%>
<% block("title", "ON STORES | O Market Place da CCP para você!"); -%>

    <div class="full">
    
        <div class="banner">
           <div class="container">
              <div id="owl-demo" class="owl-carousel">


				   <% 
				   if (banners.length>0){
				   banners.forEach(function(resultado) { 
				   %>
					<div class="item">
						<img src="<%=resultado.imagem%>" title="<%=resultado.nome%>" class="img">
						<section>
							<span><%=resultado.titulo1%></span>
							<span><%=resultado.titulo2%></span>
							<span><%=resultado.nome%></span>
						</section>
					</div>
					<%
					});
					} else {
					%>
					<div class="item">
						<img src="/banner/banner-geral.jpg" title="ONTORES" class="img">
						<section>
							<span>ONTORES</span>
						</section>
					</div>
					<%
					}
					%>
				
            
              </div><!--owl demo-->
           </div><!--container-->    
        </div> <!--banner-->
        
        
  <!------------------produtos---------------------->
  
    <h1 class="cab-on">
   	  <img src="/imagens/onstores-white.png" class="img" title="ON Stores">      
    </h1>
	
   <div id="produtos">

	<% 
	if (produtos.length>0){
		produtos.forEach(function(produto) { 
	%>    
    <a href="/produtos/<%=produto.url_title%>" class="prods">
        <section>
			 
        	<div class="favs">
				
				<%
				if (parseInt(produto.desconto)> 0){
				%>
            	<span> <%=produto.desconto%> %</span>
				<%
				}
				if(usuario != '') {
				if (produto.favorito == "NAO"){
				%> 
                <button type="button" title="Favoritar Produto" id="" onclick="favoritar_produto('<%=produto.url_title%>', event)" ></button>
				<%
				} else {
				%>
				<button type="button" title="Desfavoritar Produto" id="" onclick="remover_produto('<%=produto.url_title%>', event)"></button>
				<%
				}
				}
				%>
            </div>
          
       		<img src="<%=produto.imagem%>" title="<%=produto.produto%>" class="img">
            <h2><%=produto.loja%></h2>
            <div class="shop"><%=produto.shopping%></div>
            <h3><%=produto.produto%></h3>
            <div class="valor">
				<%
				if (produto.de == produto.por) {
				%>
				<span class="por">R$ <%=produto.por%></span>
				<%
				} else {
				%>
				<span class="de">De R$ <%=produto.de%></span>
				<span class="por">Por R$ <%=produto.por%></span>
				<%
				}
				%>
            </div>
       </section>  
   </a> 
   
   <% 
	}); 
	} else {
   %>	
   <h3>Não existem produtos para exibição</h3>
   
   <%
   }
   %>
   
   
   </div><!--produtos--> 
 </div><!--full-->

<!------------------Fim produtos---------------------->


