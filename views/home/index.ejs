								<section>
									<span><%=resultado.nome%></span>
								</section>
							</div>
							
							<%
							if (contador==4 || contador==8 || contador==12){
							%>
							</div>
							<% 
							}; 
							%>
							
							<% 
							contador++;
							}); 
							%>
						</div>
						
					
					  
				   </div>    
			</div> 
			<%	
			}
			%>
	
		
		<%  } %>
		
		
		
	
         
    </div><!--full-->
