		<script src="/js/jquery.min.js"></script>
		<script src="/js/ccp.js"></script>
		<script src="/js/jquery.maskedinput.2015.js"></script>
		
		<script type="text/javascript">
		function validar_cliente(CPF){
			var tmp_CPF = CPF;
			if (!tmp_CPF==""){
				tmp_CPF = tmp_CPF.replace(".", "");
				tmp_CPF = tmp_CPF.replace(".", "");
				tmp_CPF = tmp_CPF.replace("-", "");
			}
			if (tmp_CPF.length==11){
				$.ajax({
				  type: 'POST',
				  url: '/login/validar',
				  dataType : 'json',
				  data: { 
					'CPF': tmp_CPF, 
					'_csrf': '<%= csrfToken %>'
				  },
				  success: function (response) {
					var resposta = response;
					if (resposta.resultado == "NAO_LOCALIZADO"){
						 $('#btn_submit').prop('disabled', false);
					} else {
						if (resposta.resultado == "OK"){
							alert('Este CPF já se encontra cadastrado!');
							$('#btn_submit').prop('disabled', true);
						} else {
							$('#btn_submit').prop('disabled', true);
						}
					}
				  },
				  error: function () {
					alert("Desculpe, não foi possível pesquisar em nosso sistema");
				  }
			   });
		   }
		}  
		
		function validar_cliente_esqueci(CPF){
			var tmp_CPF = CPF;
			if (!tmp_CPF==""){
				tmp_CPF = tmp_CPF.replace(".", "");
				tmp_CPF = tmp_CPF.replace(".", "");
				tmp_CPF = tmp_CPF.replace("-", "");
			}
			if (tmp_CPF.length==11){
				$.ajax({
				  type: 'POST',
				  url: '/login/validar',
				  dataType : 'json',
				  data: { 
					'CPF': tmp_CPF, 
					'_csrf': '<%= csrfToken %>'
				  },
				  success: function (response) {
				    var resposta = response;
					if (resposta.resultado == "NAO_LOCALIZADO"){
						alert('O CPF informado não foi localizado!');
						$('#CPF2').value('');
						$('#btn_submit_esqueci').prop('disabled', true);
					} else {
						if (resposta.resultado == "OK"){
							$('#btn_submit_esqueci').prop('disabled', false);
						} else {
							$('#btn_submit_esqueci').prop('disabled', true);
						}
					}
				  },
				  error: function () {
					alert("Desculpe, não foi possível pesquisar em nosso sistema");
				  }
			   });
		   }
		}  
		</script>
		
	</head>
<body id="login">



<div class="full">  

    

