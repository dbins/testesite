<% layout("../layout/index") -%>
<% block("title", "ON Market Place | Cinema | " + nome_do_shopping_barra_titulo); -%>
 <div class="full">
    
         <div class="banner">
           <div class="container">
              <div id="owl-demo" class="owl-carousel">
                
				<% 
				if (banners.length>0){
				banners.forEach(function(resultado) { 
				%>
                <div class="item">
                	<img src="<%=resultado.images[1].url%>" title="<%=resultado.title%>">
                	<section>
                        <span>20 de agosto</span>
                        <span><%=resultado.title%></span>
                        <span><%=nome_shopping(resultado.mall)%></span>
                    </section>
                </div>
				<%
				});
				}
				%>
                
              </div><!--owl demo-->
           </div><!--container-->    
        </div> <!--banner-->
   
   <div class="filtro fgrey" id="cinefilter">
   	<form class="cinefilter"  autocomplete="off">
    	<div>
        	<label>Data</label> 
            <input type="text" name="data" id="data" value="" placeholder="__/__/____" maxlength="10">            
        </div>
        <div>
        	<label>Nome do filme</label> 
            <input type="text" id="nomefilme" name="filme" value="" placeholder="" maxlength="50">            
        </div>
                 <div>
        	<label>Categoria</label>
            <select id="categoria" name="categoria" class="minimal">
            	<option value="">Todas</option>
				<% 
				if (categorias.length>0){
				categorias.forEach(function(resultado) { 
				%>
                <option value="<%=resultado%>"><%=resultado%></option>
				<%
				});
				}
				%>
            </select>
        </div>
        
        <div>
       	<button id="perto" type="button">Perto de vocÃª
        <img src="imagens/location.png" width="25" height="34">
        </button>
		<input type="hidden" name="_csrf" value="<%= csrfToken %>">	
      </div>
      
    </form>
   </div>  <!--filtro-->   
	<div id="movies">
		
		<% 
		if (resultados.length>0){
		resultados.forEach(function(resultado) { 
		%>
		 <a href="/cinema/filme/<%=resultado.urlKey%>" class="filmes"  data-nome="<%=resultado.title.toLowerCase()%>" data-categoria="<%=resultado.genres.toString().toLowerCase()%>" data-exibicao="<%=resultado.datas.toLowerCase()%>">
			<img src="<%=resultado.images[0].url%>"  title="<%=resultado.title%>" width=200> 
			<div class="fline"></div>
			<p><%=resultado.title%></p>
		</a>
		<%
		});
		} else {
		%>
		
		<h3>Em breve!</h3>
		<%
		}
		%>
		
	 </div><!--moveis-->  

 </div><!--full-->

<script type="text/javascript">
$(document).ready(function(){
	$("#data").mask("99/99/9999");
});
</script>
<script type="text/javascript">
	
	
$(document).ready(function(){
	$("#nomefilme").keyup(function(e){
	  $("#data").val('');
	  //var selectSize = $(this).val();
	  //filter(selectSize);
	  if (e.which !== 32) {
	  var value = $(this).val();
	  var noWhitespaceValue = value.replace(/\s+/g, '');
	  var noWhitespaceCount = noWhitespaceValue.length;
	  if (noWhitespaceCount > 3) {
		  filter(value.toLowerCase());
	  } else {
		$('.filmes').show();
	  }
	  }
	});
});

$('#categoria').on('change', function() {
  var value = $(this).val();
  
  if (value==""){
	$('.filmes').show();
  } else {
	filter2(value.toLowerCase());
  }
});


$("#data").blur(function(){
    var value = $(this).val();
	$('.filmes').show();
	if (value=="" || value=="__/__/____"){
		//
	} else {
	
		filter3(value.split('/').join(''));
		$('#perto').focus(); 
	}
});

function filter(e) {
    var regex = new RegExp('\\b\\w*' + e + '\\w*\\b');
            $('.filmes').hide().filter(function () {
        return regex.test($(this).data('nome'))
    }).show();
}

function filter2(e) {
    var regex = new RegExp('\\b\\w*' + e + '\\w*\\b');
            $('.filmes').hide().filter(function () {
        return regex.test($(this).data('categoria'))
    }).show();
}

function filter3(e) {
	var regex = new RegExp('\\b\\w*' + e + '\\w*\\b');
            $('.filmes').hide().filter(function () {
        return regex.test($(this).data('exibicao'))
    }).show();
}

</script>
